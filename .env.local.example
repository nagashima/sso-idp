# 環境固有の設定（.env.localとして保存して使用）
# このファイルをコピーして .env.local を作成してください
# cp .env.local.example .env.local

# 本番環境用マスターキー（本番のみ必要）
# 開発環境では config/master.key が使用されます
# RAILS_MASTER_KEY=your_production_key_here

# カスタムホスト名（デフォルト: idp.localhost）
# 独自ドメインを使用する場合は以下を設定
# HOST_NAME=your-custom-domain.com
# HOST_PORT=443
# HYDRA_PUBLIC_URL=https://your-custom-domain.com

# 信頼するOAuth2クライアント（環境固有）
# 自動同意を有効にするクライアントIDをカンマ区切りで指定
# TRUSTED_CLIENT_IDS=client-id-1,client-id-2

# データベース接続（カスタム設定が必要な場合）
# MYSQL_ROOT_PASSWORD=custom_password
# DB_USER=custom_user
# DB_PASSWORD=custom_password

# Valkey接続（カスタム設定が必要な場合）
# VALKEY_URL=redis://:custom_password@valkey:6379/0
