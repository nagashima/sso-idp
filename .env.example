# Rails 8.0 SSO Identity Provider - 環境変数サンプル
# このファイルを .env にコピーして、適切な値を設定してください

# Timezone
TZ=Asia/Tokyo

# Rails Environment
RAILS_ENV=development

# Database Configuration
MYSQL_ROOT_PASSWORD=root_password
DB_USER=rails
DB_PASSWORD=rails_password

# Valkey Configuration
VALKEY_URL=redis://:valkey_password@valkey:6379/0

# ORY Hydra Configuration
HYDRA_ADMIN_URL=http://hydra:4445
HYDRA_DSN=mysql://rails:rails_password@tcp(db:3306)/hydra_development?parseTime=true
# 【重要】本番環境では必ず以下を変更してください
HYDRA_SECRETS_SYSTEM=change-this-secret-in-production

# Hydra Remember Settings（デフォルト: 無効）
HYDRA_LOGIN_REMEMBER=false
HYDRA_LOGIN_REMEMBER_FOR=0
HYDRA_CONSENT_REMEMBER=false
HYDRA_CONSENT_REMEMBER_FOR=0

# Hydra TTL Settings
HYDRA_LOGIN_CONSENT_TTL_MINUTES=30

# JWT Configuration
JWT_EXPIRATION_MINUTES=30

# Logout Strategy
LOGOUT_STRATEGY=local

# HTTPS Development Settings
HOST_NAME=localhost
HOST_PORT=4443
HYDRA_PUBLIC_URL=https://localhost:4443

# Vite Development Server
VITE_RUBY_HOST=0.0.0.0
VITE_RUBY_PORT=3036
VITE_RUBY_MODE=development

# Vite HMR WebSocket Configuration (for https-portal/HTTPS access)
VITE_HMR_PROTOCOL=wss
VITE_HMR_HOST=localhost
VITE_HMR_PORT=4443

# Trusted OAuth2 Client IDs（開発用デフォルト - 本番では.env.localで上書き）
TRUSTED_CLIENT_IDS=
