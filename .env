# Rails 8.0 SSO Identity Provider - 開発環境デフォルト設定

# Timezone
TZ=Asia/Tokyo

# Rails Environment
RAILS_ENV=development

# Database Configuration（開発用デフォルト）
MYSQL_ROOT_PASSWORD=root_password
DB_USER=rails
DB_PASSWORD=rails_password

# Valkey Configuration（開発用デフォルト）
VALKEY_URL=redis://:valkey_password@valkey:6379/0

# ORY Hydra Configuration
HYDRA_ADMIN_URL=http://hydra:4445
HYDRA_DSN=mysql://rails:rails_password@tcp(db:3306)/hydra_development?parseTime=true

# Hydra Remember Settings（デフォルト: 無効）
HYDRA_LOGIN_REMEMBER=false
HYDRA_LOGIN_REMEMBER_FOR=0
HYDRA_CONSENT_REMEMBER=false
HYDRA_CONSENT_REMEMBER_FOR=0

# JWT Configuration
JWT_EXPIRATION_MINUTES=30

# Logout Strategy
LOGOUT_STRATEGY=local

# HTTPS Development Settings（デフォルト: idp.localhost）
HOST_NAME=idp.localhost
HOST_PORT=443
HYDRA_PUBLIC_URL=https://idp.localhost

# Vite Development Server
VITE_RUBY_HOST=0.0.0.0
VITE_RUBY_PORT=3036
VITE_RUBY_MODE=development

# Trusted OAuth2 Client IDs（開発用デフォルト - 本番では.env.localで上書き）
TRUSTED_CLIENT_IDS=
