<div class="container mx-auto px-4 py-8">
  <div class="max-w-lg mx-auto bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">
      登録内容の確認
    </h1>

    <div class="space-y-4 mb-6">
      <div class="border-b pb-2">
        <dt class="text-sm font-medium text-gray-600">メールアドレス</dt>
        <dd class="mt-1 text-gray-900"><%= @user.email %></dd>
      </div>

      <div class="border-b pb-2">
        <dt class="text-sm font-medium text-gray-600">氏名</dt>
        <dd class="mt-1 text-gray-900"><%= @user.name %></dd>
      </div>

      <% if @user.birth_date.present? %>
        <div class="border-b pb-2">
          <dt class="text-sm font-medium text-gray-600">生年月日</dt>
          <dd class="mt-1 text-gray-900"><%= @user.birth_date %></dd>
        </div>
      <% end %>

      <% if @user.address.present? %>
        <div class="border-b pb-2">
          <dt class="text-sm font-medium text-gray-600">住所</dt>
          <dd class="mt-1 text-gray-900 whitespace-pre-line"><%= @user.address %></dd>
        </div>
      <% end %>

      <% if @user.phone_number.present? %>
        <div class="border-b pb-2">
          <dt class="text-sm font-medium text-gray-600">電話番号</dt>
          <dd class="mt-1 text-gray-900"><%= @user.phone_number %></dd>
        </div>
      <% end %>
    </div>

    <div class="space-y-3">
      <%= form_with url: users_new_register_path, method: :post, local: true do |form| %>
        <%= form.submit "登録する", 
            class: "w-full bg-green-500 hover:bg-green-600 text-white font-semibold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2" %>
      <% end %>
      
      <%= link_to '内容を修正する', users_new_path, 
          class: "block w-full text-center bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" %>
    </div>
  </div>
</div>