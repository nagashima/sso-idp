<div class="container mx-auto px-4 py-8">
  <div class="max-w-lg mx-auto bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">
      新規会員登録
    </h1>

    <%= form_with model: @user, url: users_new_confirm_path, method: :post, local: true, class: "space-y-4", authenticity_token: true do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <h3 class="text-red-800 font-semibold mb-2">入力に誤りがあります：</h3>
          <ul class="text-red-700 text-sm list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-2">
        <%= form.label :email, "メールアドレス *", class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "example@example.com",
            required: true %>
      </div>

      <div class="space-y-2">
        <%= form.label :password, "パスワード *", class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "8文字以上で入力",
            required: true %>
        <p class="text-xs text-gray-500">8文字以上で入力してください</p>
      </div>

      <div class="space-y-2">
        <%= form.label :password_confirmation, "パスワード確認 *", class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password_confirmation,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "パスワードを再入力",
            required: true %>
      </div>

      <div class="space-y-2">
        <%= form.label :name, "氏名 *", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "山田 太郎",
            required: true %>
      </div>

      <div class="space-y-2">
        <%= form.label :birth_date, "生年月日", class: "block text-sm font-medium text-gray-700" %>
        <%= form.date_field :birth_date,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div class="space-y-2">
        <%= form.label :address, "住所", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :address, rows: 3,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "〒123-4567 東京都..." %>
      </div>

      <div class="space-y-2">
        <%= form.label :phone_number, "電話番号", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :phone_number,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "090-1234-5678" %>
      </div>

      <div class="pt-4 space-y-3">
        <%= form.submit "確認画面へ", 
            class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
        
        <%= link_to 'ホームに戻る', root_path, 
            class: "block w-full text-center bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2" %>
      </div>
    <% end %>

    <div class="mt-4 text-center text-sm text-gray-600">
      <p>既にアカウントをお持ちの方は <%= link_to 'ログイン', login_path, class: "text-blue-500 hover:text-blue-600" %></p>
    </div>
  </div>
</div>