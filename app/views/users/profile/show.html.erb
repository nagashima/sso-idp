<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">
      プロフィール
    </h1>

    <div class="space-y-4">
      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">メールアドレス</h2>
        <p class="mt-1 text-lg text-gray-900"><%= @user.email %></p>
      </div>

      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">名前</h2>
        <p class="mt-1 text-lg text-gray-900">
          <%= @user.last_name %>
          <% if @user.has_middle_name == 1 && @user.middle_name.present? %>
            <span class="text-gray-600">(<%= @user.middle_name %>)</span>
          <% end %>
          <%= @user.first_name %>
        </p>
      </div>

      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">名前（かな）</h2>
        <p class="mt-1 text-lg text-gray-900"><%= @user.full_kana_name %></p>
      </div>

      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">生年月日</h2>
        <p class="mt-1 text-lg text-gray-900"><%= @user.birth_date&.strftime('%Y年%m月%d日') || '未設定' %></p>
      </div>

      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">性別</h2>
        <p class="mt-1 text-lg text-gray-900">
          <%
            gender_display = case @user.gender_code
            when 1 then '男性'
            when 2 then '女性'
            when 3 then '指定しない'
            when 4 then @user.gender_text.presence || '自由記述'
            else '未設定'
            end
          %>
          <%= gender_display %>
        </p>
      </div>

      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">携帯電話</h2>
        <p class="mt-1 text-lg text-gray-900"><%= @user.phone_number || '未設定' %></p>
      </div>

      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">自宅住所</h2>
        <% if @user.home_master_city_id.present? || @user.home_address_later.present? %>
          <p class="mt-1 text-lg text-gray-900">
            <% if @user.home_postal_code.present? %>
              〒<%= @user.home_postal_code %><br>
            <% end %>
            <% if @user.home_is_address_selected_manually == 1 %>
              <span class="text-sm text-gray-500">（手動入力）</span><br>
            <% end %>
            <%= @user.home_master_city&.master_prefecture&.name %>
            <%= @user.home_master_city&.county_name %>
            <%= @user.home_master_city&.name %>
            <%= @user.home_address_town %>
            <%= @user.home_address_later %>
          </p>
        <% else %>
          <p class="mt-1 text-lg text-gray-900">未設定</p>
        <% end %>
      </div>

      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">就労状況</h2>
        <p class="mt-1 text-lg text-gray-900">
          <%
            employment_display = case @user.employment_status
            when 1 then '働いている'
            when 2 then '働いていない'
            when 3 then '今は答えない'
            else '未設定'
            end
          %>
          <%= employment_display %>
        </p>
      </div>

      <% if @user.employment_status == 1 %>
        <div class="border-b border-gray-200 pb-4">
          <h2 class="text-sm font-medium text-gray-500">勤務先名</h2>
          <p class="mt-1 text-lg text-gray-900"><%= @user.workplace_name || '未設定' %></p>
        </div>

        <div class="border-b border-gray-200 pb-4">
          <h2 class="text-sm font-medium text-gray-500">勤務先電話番号</h2>
          <p class="mt-1 text-lg text-gray-900"><%= @user.workplace_phone_number || '未設定' %></p>
        </div>

        <div class="border-b border-gray-200 pb-4">
          <h2 class="text-sm font-medium text-gray-500">勤務先住所</h2>
          <% if @user.workplace_master_city_id.present? || @user.workplace_address_later.present? %>
            <p class="mt-1 text-lg text-gray-900">
              <% if @user.workplace_postal_code.present? %>
                〒<%= @user.workplace_postal_code %><br>
              <% end %>
              <% if @user.workplace_is_address_selected_manually == 1 %>
                <span class="text-sm text-gray-500">（手動入力）</span><br>
              <% end %>
              <%= @user.workplace_master_city&.master_prefecture&.name %>
              <%= @user.workplace_master_city&.county_name %>
              <%= @user.workplace_master_city&.name %>
              <%= @user.workplace_address_town %>
              <%= @user.workplace_address_later %>
            </p>
          <% else %>
            <p class="mt-1 text-lg text-gray-900">未設定</p>
          <% end %>
        </div>
      <% end %>

      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">アカウント状態</h2>
        <p class="mt-1">
          <% if @user.activated? %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              有効
            </span>
          <% else %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
              未認証
            </span>
          <% end %>
        </p>
      </div>

      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">最終ログイン</h2>
        <p class="mt-1 text-lg text-gray-900">
          <%= @user.last_sign_in_display %>
        </p>
      </div>
    </div>

    <div class="mt-6 flex gap-4">
      <%= link_to 'ホームに戻る', root_path,
          class: "flex-1 bg-blue-500 hover:bg-blue-600 text-white text-center font-semibold py-2 px-4 rounded" %>
      <%= button_to 'ログアウト', users_sign_out_path, method: :delete,
          class: "flex-1 bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
