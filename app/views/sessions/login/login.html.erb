<div class="container mx-auto px-4 py-8">
  <div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">
      ログイン
    </h1>

    <%= form_with url: (@login_form_url || login_path), method: :post, local: true, class: "space-y-4" do |form| %>
      <% if flash[:alert] %>
        <div data-testid="login-error-message" class="bg-red-50 border border-red-200 rounded-lg p-4">
          <p class="text-red-800"><%= flash[:alert] %></p>
        </div>
      <% end %>

      <% if flash[:notice] && !flash[:notice].include?('ログアウトしました') %>
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <p class="text-green-800"><%= flash[:notice] %></p>
        </div>
      <% end %>

      <div class="space-y-2">
        <%= form.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
        <%= form.email_field :email, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "example@example.com",
            required: true %>
      </div>

      <div class="space-y-2">
        <%= form.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
        <%= form.password_field :password,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            placeholder: "パスワードを入力",
            required: true %>
      </div>

      <div class="pt-2">
        <%= form.submit "ログイン", 
            data: { testid: "login-submit" },
            class: "w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
      </div>
    <% end %>

    <div class="mt-4 text-center">
      <%= link_to 'ホームに戻る', root_path, class: "text-blue-500 hover:text-blue-600" %>
    </div>
  </div>
</div>