<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-6">
    <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">
      プロフィール
    </h1>

    <div class="space-y-4">
      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">メールアドレス</h2>
        <p class="mt-1 text-lg text-gray-900"><%= @user.email %></p>
      </div>

      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">名前</h2>
        <p class="mt-1 text-lg text-gray-900"><%= @user.name || '未設定' %></p>
      </div>

      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">生年月日</h2>
        <p class="mt-1 text-lg text-gray-900"><%= @user.birth_date&.strftime('%Y年%m月%d日') || '未設定' %></p>
      </div>

      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">アカウント状態</h2>
        <p class="mt-1">
          <% if @user.activated? %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              有効
            </span>
          <% else %>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
              未認証
            </span>
          <% end %>
        </p>
      </div>

      <div class="border-b border-gray-200 pb-4">
        <h2 class="text-sm font-medium text-gray-500">最終ログイン</h2>
        <p class="mt-1 text-lg text-gray-900">
          <%= @user.last_login_at&.strftime('%Y年%m月%d日 %H:%M') || '記録なし' %>
        </p>
      </div>
    </div>

    <div class="mt-6 flex gap-4">
      <%= link_to 'ホームに戻る', root_path,
          class: "flex-1 bg-blue-500 hover:bg-blue-600 text-white text-center font-semibold py-2 px-4 rounded" %>
      <%= button_to 'ログアウト', logout_path, method: :delete,
          class: "flex-1 bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  </div>
</div>
